.social-networks {
  display: flex;
  align-items: center;
  &__item {
    display: block;
    margin-right: 40px;
    &:last-child {
      margin-right: 0;
    }
    svg {
      width: 100%;
      max-height: 100%;
      fill: $text-color;
    }
    &_insta {
      width: 25px;
    }
    &_vk {
      width: 31px;
    }
    &_github {
      width: 27px;
    }
  }
}