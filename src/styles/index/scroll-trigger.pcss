.scroll-trigger {
    display: flex;
    justify-content: center;
  &__text {
    margin-right: 7px;
    font-size: 18px;
    font-weight: bolder;
  }
  &__content {
    display: flex;
    align-items: center;
    cursor: pointer
  }
  &__icon {
    width: 30px;
    svg {
      fill: $dark-blue;
    }
  }
}